<Window x:Class="DroneStation.ScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneStation"
        mc:Ignorable="d"
        Title="Save this script o your Raspberry Pi on your drone:" Height="388.348" Width="545.136" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-2">
        <TextBox x:Name="txtScript" HorizontalAlignment="Left" Height="286" Margin="21,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="488" FontSize="9" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="btnOk" Content="Close" HorizontalAlignment="Left" Margin="399,314,0,0" VerticalAlignment="Top" Width="110" Click="btnOk_Click" Height="23"/>
        <Button x:Name="btnSave" Content="Save to file..." HorizontalAlignment="Left" Margin="21,314,0,0" VerticalAlignment="Top" Width="110" Click="btnSave_Click" Height="23"/>
        <Button x:Name="btnCopy" Content="Copy to clipboard" HorizontalAlignment="Left" Margin="136,314,0,0" VerticalAlignment="Top" Width="110" RenderTransformOrigin="-0.421,0.43" Click="btnCopy_Click" Height="23"/>

    </Grid>
</Window>
